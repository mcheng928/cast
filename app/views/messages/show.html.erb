<div class="page-header">
  <h3>Message #<%= @message.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Event</dt>
      <dd>
        <% if @message.event.present? %>
          <a href="/events/<%= @message.event_id %>">
            <%= @message.event.host_id %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @message.user.present? %>
          <a href="/users/<%= @message.user_id %>">
            <%= @message.user.first_name %>
          </a>
        <% end %>
      </dd>

      <dt>Datetime</dt>
      <dd><%= @message.datetime %></dd>

      <dt>Likes</dt>
      <dd><%= @message.likes %></dd>

      <dt>Body</dt>
      <dd><%= @message.body %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/messages" class="btn btn-primary">
        Back
      </a>
      <a href="/messages/<%= @message.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_message/<%= @message.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
