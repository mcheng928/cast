<div class="page-header">
  <h3>Voting Board #<%= @voting_board.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Venue</dt>
      <dd>
        <% if @voting_board.venue.present? %>
          <a href="/venues/<%= @voting_board.venue_id %>">
            <%= @voting_board.venue.address %>
          </a>
        <% end %>
      </dd>

      <dt>Event</dt>
      <dd>
        <% if @voting_board.event.present? %>
          <a href="/events/<%= @voting_board.event_id %>">
            <%= @voting_board.event.host_id %>
          </a>
        <% end %>
      </dd>

      <dt>Vote</dt>
      <dd><%= @voting_board.vote %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/voting_boards" class="btn btn-primary">
        Back
      </a>
      <a href="/voting_boards/<%= @voting_board.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_voting_board/<%= @voting_board.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
