<div class="page-header">
  <h1>
    Invite lists
    <a href="/invite_lists/new" class="btn btn-lg btn-success">New Invite list</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Event</th>
        <th>Invitee</th>
        <th>Actions</th>
      </tr>

      <% @invite_lists.each do |invite_list| %>
      <tr>
        <td>
          <% if invite_list.event.present? %>
            <a href="/events/<%= invite_list.event.id %>">
              <%= invite_list.event.host_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if invite_list.invitee.present? %>
            <a href="/users/<%= invite_list.invitee.id %>">
              <%= invite_list.invitee.first_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/invite_lists/<%= invite_list.id %>" class="btn btn-primary">Show</a>
          <a href="/invite_lists/<%= invite_list.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_invite_list/<%= invite_list.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @invite_lists, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
